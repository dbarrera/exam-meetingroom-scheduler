@page "{id:int}"
@model RoomAttributes.Delete
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Room Attribute</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <display-label-tag For="Data.Name" />
        </dt>
        <dd>
            <display-tag for="Data.Name" />
        </dd>
        <dt>
            <display-label-tag For="Data.Value" />
        </dt>
        <dd>
            <display-tag for="Data.Value" />
        </dd>
        <dt>
            <display-label-tag for="Data.AffectedRooms" />
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Name</th>
                </tr>
                @for (int i = 0; i < Model.Data.AffectedRooms.Count; i++)
                {
                    <tr>
                        <td>
                            <display-tag for="Data.AffectedRooms[i].Name" />
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
    <form method="post">
        <input-tag for="Data.Id" />
        <input type="submit" value="Delete" class="btn btn-default" />
        <a asp-page="Index">Back to List</a>
    </form>
</div>

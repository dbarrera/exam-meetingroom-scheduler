@page "{handler?}"
@model Schedules.Edit
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.HiddenFor(m => m.Data.Id)
            @Html.FormBlock(m => m.Data.Name)
            @Html.FormBlock(m => m.Data.Room)
            @Html.LabelFor(m => m.Data.StartTime)
            @Html.EditorFor(m => m.Data.StartTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.LabelFor(m => m.Data.EndTime)
            @Html.EditorFor(m => m.Data.EndTime, new { htmlAttributes = new { @class = "form-control" } })
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

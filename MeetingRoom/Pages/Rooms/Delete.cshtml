@page "{id:int}"
@model Rooms.Delete
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <display-label-tag For="Data.Name" />
        </dt>
        <dd>
            <display-tag for="Data.Name" />
        </dd>
        <dt>
            <display-label-tag For="Data.Items" />
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                </tr>
                @for (var i = 0; i < Model.Data.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <display-tag for="Data.Items[i].Name" />
                        </td>
                        <td>
                            <display-tag for="Data.Items[i].Value" />
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

    <form method="post">
        <input-tag for="Data.Id" />
        <input type="submit" value="Delete" class="btn btn-default" />
        <a asp-page="Index">Back to List</a>
    </form>
</div>
